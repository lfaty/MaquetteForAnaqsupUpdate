@using MaquetteForAnaqsup.UI.Models.DTO
@model DashboardDto

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Statitistiques</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table id="example1" class="table table-bordered table-striped">

                            <!-- Table head -->
                            <thead>
                                <tr class="th-lg">
                                    <th>
                                        Code Univ
                                    </th>
                                    <th>
                                        ID Parcours
                                    </th>
                                    <th>
                                        Parcours
                                    </th>
                                    <th>
                                        ID UE
                                    </th>
                                    <th>
                                        UE
                                    </th>
                                </tr>
                            </thead>
                            <!-- Table head -->
                            <!-- Table body -->
                            <tbody>
                                @if (Model.AtomeElementConstitutifs != null && Model.AtomeElementConstitutifs.Any())
                                {
                                    @foreach (var item in Model.AtomeElementConstitutifs)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CodeUniv)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AtomePedagogiqueId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AtomePedagogique.LibelleAtomePedagogique)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ElementConstitutifId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ElementConstitutif.LibelleEC)
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="dt-center">
                                            <i style='font-size:60px;color:antiquewhite' class="fas fa-folder-open"></i>
                                            <h3 style="color:darkgoldenrod"> Veuillez sélectionner une université pour afficher les formations </h3>
                                        </td>
                                        <td style="display: none;"></td>
                                        @* <td style="display: none;"></td>
                                        <td style="display: none;"></td>
                                        <td style="display: none;"></td>
                                    <td style="display: none;"></td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- Table -->
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</div>
